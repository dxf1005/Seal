<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>
    <style name="login_edit_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textColorHint">#C6C6C6</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="edit_style">
        <item name="android:background">@drawable/edit_default_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textColorHint">#C6C6C6</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!---MainActivity     activity_main -->
    <style name="main_row_llyt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_llyt_height</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="main_item_llyt_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="main_button_style">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="main_tv_style">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dodgerblue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>



    <style name="textSize_18_style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textColor_white_sytle" parent="textSize_18_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textColor_black_style" parent="textSize_18_style">
        <item name="android:textColor">@color/textcolor</item>
    </style>

    <style name="checkbox_default_style" >

        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/checkbox_btn_bg</item>
        <item name="android:button">@null</item>

    </style>

</resources>

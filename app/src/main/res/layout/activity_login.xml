<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="印章审批系统"
        android:textColor="@color/textcolor"
        android:textSize="24sp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/edit_bg"
        android:orientation="vertical">


        <EditText
            android:id="@+id/login_server_edit"
            style="@style/my_edit_style"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入服务器地址"
            android:imeOptions="actionDone" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DBDBDB" />


        <EditText
            android:id="@+id/login_name_edit"
            style="@style/my_edit_style"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入用户账号"
            android:imeOptions="actionDone"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DBDBDB" />

        <EditText
            android:id="@+id/login_pwd_edit"
            style="@style/my_edit_style"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入密码"
            android:password="true"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp">

        <CheckBox
            android:id="@+id/check_pwd"
            style="@style/CheckboxDefalt"
            android:layout_marginLeft="20dp" />

        <TextView
            style="@style/BlackFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="记住密码"

            />
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        style="@style/WhiteFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/setting_btn_bg"
        android:text="登录" />


</LinearLayout>

